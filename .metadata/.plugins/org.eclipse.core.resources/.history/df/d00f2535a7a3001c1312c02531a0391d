package com.userAndProduct.Apirest.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.userAndProduct.Apirest.model.Departament;
import com.userAndProduct.Apirest.model.ListarDeptEQtdTarefas;

public interface DepartamentRepository extends JpaRepository<Departament, Long> {
	
	@Query(value = "SELECT new com.userAndProduct.Apirest.model.ListarDeptEQtdTarefas(d.idDepartamento, d.titulo, t.idUser, t.idDepartamento) FROM Task Join Departament d on d.idDepartamento = t.idDepartamento group by t.idDepartamento, d.titulo")
	public List<ListarDeptEQtdTarefas> getDeptTarefas();

}
